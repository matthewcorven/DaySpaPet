{
	"Infrastructure": {
		"Databases": {
			"DaySpaPetDb": {
				"Drop": false,
				"MustExist": true,
				"RunAnyNewMigrations": false
			}
		}
	},
	"Authentication": {
		"Schemes": {
			"Bearer": {
				"ValidAudiences": [
					"https://dayspa.pet",
					"https://www.dayspa.pet"
				],
				"ValidIssuer": "https://dayspa.pet",
				"RequireHttpsMetadata": true,
				"PrivateSigningKey": "SHOULD_BE_REPLACED_BY_ENV_VARS",
				"PublicSigningKey": "SHOULD_BE_REPLACED_BY_ENV_VARS",
				"TokenExpirationSeconds": "3600"
			}
		}
	},
	"AllowedHosts": "*",
	"Serilog": {
		"Using": [
			"Serilog.Sinks.Console",
			"Serilog.Sinks.File"
		],
		"MinimumLevel": {
			"Default": "Information",
			"Override": {
				"DaySpaPet.WebApi": "Warning"
			}
		},
		"WriteTo": [
			{
				"Name": "File",
				"Args": {
					"path": "/Logs/log-Production-.txt",
					"rollingInterval": "Day",
					"rollOnFileSizeLimit": true,
					"formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
				}
			}
		],
		"Properties": {
			"Environment": "Production"
		}
	}
}
